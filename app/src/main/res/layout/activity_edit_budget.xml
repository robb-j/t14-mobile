<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="uk.ac.ncl.csc2022.t14.bankingapp.activities.EditBudgetActivity">

    <TextView
        android:id="@+id/title_edit_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Budget"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <ImageView
        android:contentDescription="@string/separator_description"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#222222"
        android:id="@+id/divider"
        android:layout_below="@id/title_edit_budget"
        android:layout_marginBottom="10dp"
        />


    <FrameLayout
        android:id="@+id/content_frame_edit_budget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"/>

</RelativeLayout>
