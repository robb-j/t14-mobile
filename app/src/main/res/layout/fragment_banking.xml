<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Personal Banking"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_margin="10dp"/>

    <ImageView
        android:contentDescription="@string/separator_description"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        android:id="@+id/divider_banking_fragment"
        android:layout_margin="10dp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:id="@+id/text_banking_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ACCOUNTS"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_banking_accounts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    <TextView
        android:id="@+id/text_banking_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PRODUCTS"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="10dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_banking_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>

    </LinearLayout>
</ScrollView>