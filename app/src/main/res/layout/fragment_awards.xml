<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="uk.ac.ncl.csc2022.t14.bankingapp.tabs.Awards.AwardsFragment"
    >


    <TextView
        android:id="@+id/title_awards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Awards"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <LinearLayout
        android:id="@+id/layout_current_points"
        android:layout_below="@+id/title_awards"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        >

        <ImageView
            android:contentDescription="new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/account_image"
            android:maxWidth="16dp"
            android:maxHeight="16dp"
            android:adjustViewBounds="true"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/claim_reward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Claim your Reward!"/>

    </LinearLayout>

    <TextView
        android:id="@+id/text_current_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_current_points"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Current Points"
        />


    <ImageView
        android:id="@+id/divider_awards"
        android:contentDescription="@string/separator_description"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@color/black"
        android:layout_below="@+id/text_current_points"
        android:layout_marginBottom="10dp"/>
    <TextView
        android:id="@+id/awards_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_awards"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="12dp"
        android:text="My Rewards"
        style="?android:listSeparatorTextViewStyle"/>

    <ListView
        android:id="@+id/awards_list"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/awards_header"

        android:divider="@android:color/transparent"
        android:dividerHeight="8sp"
        android:padding="12dp"
        android:layout_alignParentLeft="true"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"/>
    <TextView
        android:id="@+id/pointsList_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/awards_list"
        android:textStyle="bold"
        android:textSize="20sp"
        android:padding="12dp"
        android:text="My Recent Points"
        style="?android:listSeparatorTextViewStyle"/>
    <ListView
        android:id="@+id/points_list"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_below="@id/pointsList_header"

        android:divider="@android:color/transparent"
        android:dividerHeight="8sp"
        android:padding="12dp"
        android:layout_alignParentLeft="true"
        android:listSelector="@android:color/transparent"
        android:cacheColorHint="@android:color/transparent"/>
</RelativeLayout>
